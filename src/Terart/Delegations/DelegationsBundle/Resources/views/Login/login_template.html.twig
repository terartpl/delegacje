<div class="panel panel-default">
    <div class="panel-heading"><h3 class="panel-title"><strong>{{ 'translations.PleaseLogIn'|trans({}, "DelegationsBundle") }}</strong></h3></div>
    <div class="panel-body">
        <form role="form" action="{{ path }}" method="post">
            <div class="form-group">
                <label for="username">{{ "translations.Login"|trans({}, "DelegationsBundle") }}</label>
                <input name="_username" type="text" class="form-control" id="username" placeholder="{{ "translations.Login"|trans({}, "DelegationsBundle") }}" value="{{ username }}">
            </div>
            <div class="form-group">
                <label for="inputPassword">{{ "translations.Password"|trans({}, "DelegationsBundle") }}</label>
                <input type="password" class="form-control" placeholder="{{ "translations.Password"|trans({}, "DelegationsBundle") }}" name="_password" required="required">
            </div>
            {% if app.request.get('_route') != app.request.headers.get('referer') %}
                <input type="hidden" name="_target_path" value="{{ _target_path|default(app.request.headers.get('referer')) }}" />
            {% endif %}
            <button type="submit" class="btn btn-sm btn-default">{{ "translations.Login"|trans({}, "DelegationsBundle") }}</button>
        </form>
    </div>
</div>